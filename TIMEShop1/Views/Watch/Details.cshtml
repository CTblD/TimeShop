@model TIMEShop1.Models.Watch
@{
    ViewData["Title"] = "Карточка товара";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Model" class="img-fluid rounded shadow-sm" />
        </div>
        <div class="col-md-6">
            <h1 class="display-4">@Model.Brand @Model.Model</h1>
            <p class="text-muted">@Model.Description</p>
            <h2 class="text-success">Цена: $@Model.Price</h2>
            
            <form asp-action="CreateOrder" method="post" class="mt-4">
                <input type="hidden" name="WatchId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary btn-lg">Заказать сейчас</button>
            </form>
        </div>
    </div>
</div>
