@using TIMEShop1

<!DOCTYPE html>
<html lang="ru">
<head >
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> @ViewData["Title"] - TIMEShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TIMEShop1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0" style="width:100%; display:flex; justify-content: space-between">
                        <li class="nav-item">
                            <a class="navbar-brand" style="font-size: 2em;" asp-area="" asp-controller="Home" asp-action="Index">TIMEShop</a>
                        </li>
                        <li class="nav-item" style="display:flex">
                            <a class="nav-link" style="font-size: 1.6em; color:black;" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                            <a class="nav-link" style="font-size: 1.6em; color:black;" asp-area="" asp-controller="Watch" asp-action="Index">Часы</a>
                            <a class="nav-link" style="font-size: 1.6em; color:black;" asp-area="" asp-controller="Order" asp-action="Index">Заказы</a>
                         </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item" style="display:flex">
                                <form asp-area="" style="font-size: 1.6em; color:black;" asp-controller="Account" asp-action="Logout" class="d-inline">
                                    <button class="btn btn-outline-danger">Выйти</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item" style="display:flex">
                                <a class="nav-link" style="font-size: 1.6em; color:black;" asp-area="" asp-controller="Account" asp-action="Login">Войти</a>
                                <a class="nav-link" style="font-size: 1.6em; color:black;" asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto py-3">
        <div class="container text-center">
            &copy; 2024 - TIMEShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Политика конфиденциальности</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
